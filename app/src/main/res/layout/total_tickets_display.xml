<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_rounded2"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:orientation="vertical"
    android:elevation="20dp"
    android:padding="10dp">

<!--    <ImageView-->
<!--        android:id="@+id/imgCart"-->
<!--        android:layout_width="80dp"-->
<!--        android:layout_height="130dp"-->
<!--        android:background="@drawable/grey_border_ring"-->
<!--        android:padding="15dp"-->
<!--        android:src="@mipmap/ticket_" />-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="तक्रारीचा विषय"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="तक्रारीचा तपशील"
            android:textColor="@color/Black"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/txtTicketId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="तक्रार नं:- TICKET-2211"
            android:textColor="@color/redcolor"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="310dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/dash_line" />

        <TextView
            android:id="@+id/txtAddedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="13-06-2019 12:13 PM"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_rounded_bg"
            android:paddingLeft="10dp"
            android:padding="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text=""
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>